def login ():
  
   password_correct= 1254
   tentatives= 1
   max_tentatives=4
   while tentatives < max_tentatives:
     user_password = int(input('enter your password: '))  
      
     if user_password==password_correct:
            
            print('password is correct \n you can login now')
            
            return
         
     else:
        
        tentatives+=1
        
     print('retry correct password to access your account ')

     continue
    

if __name__=="__main__":        
  login()